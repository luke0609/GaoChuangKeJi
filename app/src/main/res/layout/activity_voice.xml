<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="com.jiaokaokeji.gaochuangkeji.book.Activity.VoiceActivity">

    <RelativeLayout
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_style"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="语音练习"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lt_01"
        android:layout_below="@+id/title_top"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/voice1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音"
            android:textColor="#707070"
            android:layout_gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>
        <View
            android:id="@+id/struct"
            android:layout_below="@+id/lt_01"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E1E1E2"
            />

    <LinearLayout
        android:id="@+id/ll_sturct"
        android:layout_below="@+id/light_area"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E2E2E3"
            />
        <View
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="#f8f8f8"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E2E2E3"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lt_02"
        android:layout_below="@+id/ll_sturct"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/jieda"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细"
            android:textColor="#707070"
            android:layout_gravity="center"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:id="@+id/struct2"
        android:layout_below="@+id/lt_02"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E1E1E2"
        />
    <ListView
        android:id="@+id/lv_dl"
        android:layout_below="@+id/struct2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <GridLayout
        android:id="@+id/light_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_below="@+id/struct"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            >
        <at.markushi.ui.CircleButton
            android:id="@+id/btn_1"
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:src="@drawable/play"
            android:layout_centerHorizontal="true"
            app:cb_color="#03A89E"
            app:cb_pressedRingWidth="2dip" />
            <TextView
                android:id="@+id/tx_1"
                android:layout_below="@id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="灯光一"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            >
            <at.markushi.ui.CircleButton
                android:id="@+id/btn_2"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:src="@drawable/play"
                android:layout_centerHorizontal="true"
                app:cb_color="#03A89E"
                app:cb_pressedRingWidth="2dip" />
            <TextView
                android:id="@+id/tx_2"
                android:layout_below="@id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="灯光二"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            >
            <at.markushi.ui.CircleButton
                android:id="@+id/btn_3"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:src="@drawable/play"
                android:layout_centerHorizontal="true"
                app:cb_color="#03A89E"
                app:cb_pressedRingWidth="2dip" />
            <TextView
                android:id="@+id/tx_3"
                android:layout_below="@id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="灯光三"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <at.markushi.ui.CircleButton
                android:id="@+id/btn_4"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:src="@drawable/play"
                android:layout_centerHorizontal="true"
                app:cb_color="#03A89E"
                app:cb_pressedRingWidth="2dip" />
            <TextView
                android:id="@+id/tx_4"
                android:layout_below="@id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="灯光四"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <at.markushi.ui.CircleButton
                android:id="@+id/btn_5"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:src="@drawable/play"
                app:cb_color="#03A89E"
                app:cb_pressedRingWidth="2dip"
                android:layout_centerHorizontal="true"
               />
            <TextView
                android:id="@+id/tx_5"
                android:layout_below="@id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="灯光五"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <at.markushi.ui.CircleButton
                android:id="@+id/btn_6"
                android:layout_width="56dip"
                android:layout_height="56dip"
                android:src="@drawable/play"
                android:layout_centerHorizontal="true"
                app:cb_color="#03A89E"
                app:cb_pressedRingWidth="2dip" />
            <TextView
                android:id="@+id/tx_6"
                android:layout_below="@id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="灯光六"/>
        </RelativeLayout>
    </GridLayout>

</RelativeLayout>
