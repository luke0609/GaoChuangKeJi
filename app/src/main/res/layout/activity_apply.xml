<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_apply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiaokaokeji.gaochuangkeji.home.Activity.ApplyActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/main_style">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾校报名"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="报名须知"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_type"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/text_style"
        android:text="报名车型"/>
<RadioGroup
    android:layout_below="@+id/tv_type"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="60dp">
    <RadioButton

        android:drawableTop="@drawable/vanpool"
        android:layout_width="0dp"
        android:button="@null"
        android:text="C1/C2/C3"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RadioButton
        android:drawableTop="@drawable/trolleybus"
        android:layout_width="0dp"
        android:button="@null"
        android:text="A1/A3/B1"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <RadioButton
        android:drawableTop="@drawable/transportation"
        android:layout_width="0dp"
        android:button="@null"
        android:text="A2/B2"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</RadioGroup>
</RelativeLayout>
