<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_apply"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiaokaokeji.gaochuangkeji.home.Activity.ApplyActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/main_style">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾校报名"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_p1"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_type"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/text_style"
        android:text="报名车型"/>
<RadioGroup
    android:id="@+id/rg_type"
    android:layout_below="@+id/tv_type"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="60dp">
    <RadioButton
        android:drawableTop="@drawable/vanpool"
        android:layout_width="0dp"
        android:button="@null"
        android:text="C1/C2/C3"
        android:gravity="center"
        android:textColor="@drawable/radiotab_textcolor_seletor2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/radiotab_bk_selector2"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RadioButton
        android:drawableTop="@drawable/trolleybus"
        android:layout_width="0dp"
        android:button="@null"
        android:text="A1/A3/B1"
        android:gravity="center"
        android:textColor="@drawable/radiotab_textcolor_seletor2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/radiotab_bk_selector2"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <RadioButton
        android:drawableTop="@drawable/transportation"
        android:layout_width="0dp"
        android:button="@null"
        android:text="A2/B2"
        android:textColor="@drawable/radiotab_textcolor_seletor2"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/radiotab_bk_selector2"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</RadioGroup>
    <TextView
        android:id="@+id/tv_menu"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rg_type"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/text_style"
        android:text="套餐类型"/>
    <Spinner
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tv_menu"
        android:id="@+id/spinner"
        android:gravity="center"
        android:textColor="@color/text_style"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        >

    </Spinner>
    <TextView
        android:id="@+id/tv_service"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="@color/text_style"
        android:text="服务类型"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_service"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <RadioButton
            android:drawableTop="@drawable/shangmen"
            android:layout_width="0dp"
            android:button="@null"
            android:textColor="@drawable/radiotab_textcolor_seletor2"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="免费上门报名"
            android:background="@drawable/radiotab_bk_selector2"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <RadioButton
            android:drawableTop="@drawable/wangdian"
            android:layout_width="0dp"
            android:button="@null"
            android:text="中华路501号报名"
            android:textColor="@drawable/radiotab_textcolor_seletor2"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/radiotab_bk_selector2"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </RadioGroup>
</RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_top"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:singleLine="true"
            app:met_baseColor="@color/text_style"
            app:met_primaryColor="@color/main_style"
            app:met_errorColor="#f00"
            app:met_clearButton="true"
            android:textSize="16sp"

            app:met_floatingLabelTextSize="14sp"
            android:hint="姓名"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_phone"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:singleLine="true"
            app:met_baseColor="@color/text_style"
            app:met_primaryColor="@color/main_style"
            app:met_errorColor="#f00"
            app:met_clearButton="true"
            android:textSize="16sp"
            app:met_floatingLabelTextSize="14sp"
            android:hint="电话"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_address"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/text_style"
            app:met_primaryColor="@color/main_style"
            app:met_errorColor="#f00"
            app:met_floatingLabelTextSize="14sp"
            android:textSize="16sp"
            app:met_clearButton="true"
            android:hint="地址"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_tips"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            app:met_baseColor="@color/text_style"
            app:met_primaryColor="@color/main_style"
            app:met_errorColor="#f00"
            app:met_floatingLabelTextSize="14sp"
            app:met_clearButton="true"
            android:textSize="16sp"
            android:hint="备注"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#20cccccc"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/tv_goods_kefu"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22sp"
            android:text="￥3030"
            android:textColor="#80ff0000"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


        <Button
            android:id="@+id/btn_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_style"
            android:text="报名须知"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff3300"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="16sp"
            />
    </LinearLayout>
</RelativeLayout>
