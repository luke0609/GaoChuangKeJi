<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.Home">



    <com.jiaokaokeji.gaochuangkeji.application.ObservableScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <include
                android:id="@+id/banner"
                layout="@layout/home_head_layout"
                />
            <include
                android:id="@+id/button_bar"
                layout="@layout/home_head2_layout"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="驾校资讯"
                android:textSize="18dp"
                android:gravity="center"

                android:layout_marginBottom="3dp"
                />

            <com.jiaokaokeji.gaochuangkeji.application.ListViewForScrollView
                android:id="@+id/message_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="10dp"
                android:divider="#f4f4f4"
               >
            </com.jiaokaokeji.gaochuangkeji.application.ListViewForScrollView>

        </LinearLayout>
</com.jiaokaokeji.gaochuangkeji.application.ObservableScrollView>
    <RelativeLayout
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00000000"
        >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00000000"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="天保学车"/>
    </RelativeLayout>

</RelativeLayout>
