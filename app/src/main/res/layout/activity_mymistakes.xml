<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mymistakes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="com.jiaokaokeji.gaochuangkeji.book.Activity.MymistakesActivity">
    <RelativeLayout
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_style"
        >
        <ImageView
            android:id="@+id/iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:text="我的错题"/>
    </RelativeLayout>
    <ListView
        android:layout_below="@id/title_top"
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="@dimen/home_menu_margin_8"
        android:layout_marginRight="@dimen/home_menu_margin_8"
        android:layout_marginTop="@dimen/home_menu_margin_8"
        android:layout_marginBottom="@dimen/home_menu_margin_8"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@color/view_manager"
        android:dividerHeight="0.5sp"
        android:footerDividersEnabled="false"
        android:gravity="center"
        android:listSelector="#00000000"
        android:scrollbars="none" />
</LinearLayout>
